{% extends 'base.html.twig' %}

{% block title %}
    {{ ad.title }}
{% endblock %}

{% block body %}

    <div class="ad-title">
        <div class="info">
            <h1>{{ ad.title | escape }}</h1>
        </div>
        <div class="container cont-ad">
            
            <img src="{{ ad.coverImage | escape }}" alt="image de l'appartement">
            <div class="container-child">
                
                <div class="rating-row">
                    Note : {% include 'partials/rating.html.twig' with {'rating' : ad.avgRatings } %}
                    <strong>{{ ad.price | number_format(2, ',', ' ') }}&euro;</strong> / nuit
                </div>
                <div class="ad-content">
                    <p>{{ ad.content | escape | raw }}</p>
                    <a href="{{ path('booking_create', {'slug': ad.slug | escape})}}" class="btn-book-ad">Réserver !</a>
                    <br/>
                    <br/>
                    <hr>
    
                    {% if ad.comments|length > 0 %}
                        <div class="global-rate">
                            <h4 class="alert-heading text-center">
                                <div class="row align-items-center">
                                    <div class="col">
                                        Note globale donnée par nos voyageurs
                                    </div>
                                    <div class="col-rating">
                                        {% include 'partials/rating.html.twig' with {'rating' : ad.avgRatings } %}
                                        <br>
                                        <small>(Calculée sur {{ ad.comments | escape | length }} avis !)</small>
                                    </div>
                                </div>
                            </h4>
                        </div>
                        <h2 class="mb-3">Commentaires de nos voyageurs :</h2>
    
                        {% for comment in ad.comments %}
                            <div class="bg-light rounded mb-3 py-3 px-3 cont-comment">
                                <strong>{{ comment.author.fullName | escape }} a dit :</strong> 
                                <blockquote>
                                    {{ comment.content | escape }}
                                </blockquote>
                                <strong class="rate">Note donnée: </strong>
    
    
                                {% include 'partials/rating.html.twig' with { 'rating' : comment.rating } %}
                            </div>
                        {% endfor %}
                    {% else %}
                        <h2>Cette annonce n'a pas encore reçu de commentaires ...</h2>
                    {% endif %}
                    {% if app.user and app.user == ad.author %}
                        <a href="{{ path('ads_edit', {'slug': ad.slug | escape}) }}" class="btn 
                        btn-secondary">Modifier l'annonce</a>
        
                        <a href="{{ path('ads_delete', {'slug': ad.slug | escape}) }}" class="btn
                        btn-danger" onclick="return confirm(`Etes vous sur de vouloir supprimer l'annonce : {{ ad.title | escape }} ?`)">Supprimer l'annonce</a>
        
                    {% endif %}
                </div>
                <div class="container-2">
                    <div class="row">
                        <div class="col-md-8 mb-3">
                            {{ ad.content | escape | raw }}
    
                            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                                <ol class="carousel-indicators">
                                    {% for image in ad.images %}
                                    <li data-target="#carouselExampleIndicators" data-slide-to="{{ loop.index0 }}" class="{% if loop.first %}active{% endif %}"></li>
                                    {% endfor %}
                                </ol>
                                <div class="carousel-inner">
                                    {% for image in ad.images %}
                                        <div class="carousel-item {% if loop.first %}active{% endif %}">
                                            <img src="{{ image.url }}" class="d-block w-100" alt="...">
                                            <div class="carousel-caption d-none d-md-block">
                                                <h5>{{ ad.title | escape }}</h5>
                                                <p>{{ image.caption | escape }}</p>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
    
                            <hr>
                        </div>
                        <div class="col">
                            {% set a = ad.author %}
                            <div class="row">
                                <div class="col-3">
                                    <a href="{{ path('user_show', {'slug': a.slug}) }}">
                                    <img src="{{ a.picture }}" class="avatar avatar-medium" alt="Avatar de {{ a.fullName }}">
                                    </a>
                                </div>
                                <div class="col">
                                    <a href="{{ path('user_show', {'slug': a.slug}) }}">
                                    <h3>{{ a.fullName }}</h3>
                                    </a>
                                    <span class="badge badge-primary">{{ a.ads | length }} annonces</span>
                                </div>
                            </div>
                            {{ a.description | raw }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}