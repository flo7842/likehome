{% extends 'base.html.twig' %}

{% block title %}Vos réservations passées et à venir{% endblock %}

{% block body %}

    <div class="info">
    <h2 class="title-section"><span>Mes réservations</span></h2>
        <p>Retrouvez ci-dessous toutes vos réservations passées et à venir</p>
    </div>
    <div class="container container-child cont-my-booking">

        {% for booking in app.user.bookings %}
            {% set ad = booking.ad %}
            <div class="row mt-5">
                <div class="col-4">
                    <img src="{{ ad.coverImage | escape }}" alt="Photo de l'annonce {{ ad.title | escape }}" class="img-fluid">

                    <div class="book-rating">
                        {% set comment = ad.commentFromAuthor(app.user) %}
                        {% if comment is not null %}
                            <strong class="rate">Note donnée : </strong>{% include 'partials/rating.html.twig'
                        with {'rating': comment.rating}%}
                        {% else %}
                            <p>Vous n'avez pas encore donné de note.
                            <a href="{{ path('booking_show', {'id': booking.id}) }}#comment">
                                Je donne mon avis !</p>
                            </a>
                        {% endif %}
                    </div>
                </div>
                <div class="book-info">
                    <h4>{{ ad.title }}</h4>
                    <p>
                        Réservation <strong>n°{{ booking.id }}</strong><br>
                        Du {{ booking.startDate|date('d/m/Y')  | escape }} au {{ booking.endDate|date('d/m/Y')  | escape }}
                        ({{ booking.amount | escape | number_format(2, ',', ' ') }}) &euro;)
                    </p>
                    <a href="{{ path('booking_show', {'id': booking.id}) }}"
                       class="btn btn-info">Plus d'informations</a>
                </div>
                 <hr style="margin-top: 1rem;">
            </div>

        {% endfor %}

    </div>
       

{% endblock %}