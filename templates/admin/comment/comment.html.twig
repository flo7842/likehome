{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des commentaires !{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h2 class="title-section"><span>Gestion des commentaires</span></h2>

        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Post√© le</th>
                <th>Auteur</th>
                <th>Commentaire</th>
                <th>Note</th>
                <th>Annonce</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for comment in pagination.getData %}
                <tr>
                    <td>{{ comment.id }}</td>
                    <td>{{ comment.createdAt | date('d/m/Y H:i') }}</td>
                    <td><img src="{{ comment.author.picture }}" alt="Photo de {{ comment.author.fullName | escape }}" class="avatar avatar-micro"> {{ comment.author.fullName | escape }}</td>
                    <td>{{ comment.content | escape | nl2br }}</td>
                    <td>
                        <span class="badge badge-dark">{{ comment.rating }}</span></td>
                    <td>{{ comment.ad.title | escape }}</td>
                    <td>
                        <a href="{{ path('admin_comment_edit', {'id': comment.id}) }}" class="btn btn-primary">
                            <i class="fas fa-pen"></i>
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('admin_comment_delete', {'id': comment.id}) }}" class="btn btn-danger">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {{ pagination.display() }}
    </div>


{% endblock %}
