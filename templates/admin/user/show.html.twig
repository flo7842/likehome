{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des r√©servations !{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h2 class="title-section"><span>Gestion des utilisateurs</span></h2>

        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>FullName</th>
                <th>Email</th>
                <th>Role</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for user in pagination.getData %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td><img src="{{ user.picture | escape }}" class="avatar avatar-micro" alt="Avatar de {{ user.fullName | escape }}">
                        {{ user.fullName | escape }}</td>
                   
                        
                    <td>{{ user.email | escape }}</td>
                    <td>{% for role in user.roles %}
                        {{ role | slice(5, 5) }}
                    {% endfor %}</td>
                    
                    <td>
                        <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-primary">
                            <i class="fas fa-pen"></i>
                        </a> 
                        <a href="{{ path('admin_user_delete', {'id': user.id}) }}" class="btn btn-danger">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                    <td>
                        
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {{ pagination.display() }}
    </div>


{% endblock %}
